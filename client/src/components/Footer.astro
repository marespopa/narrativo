---
const footer_links = ["Privacy Policy", "Terms of Service", "Contact Us"];
const social_media_links = ["Facebook", "Twitter", "Instagram"];
---

<!-- Footer -->
<footer class="bg-gray-900 text-gray-100 py-6">
  <div
    class="container mx-auto flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
  >
    <!-- Footer Links -->
    <nav class="flex space-x-6">
      {
        footer_links.map((link) => (
          <a
            href={`/${link.toLowerCase().replace(" ", "-")}`}
            class="hover:text-gray-300"
          >
            {link}
          </a>
        ))
      }
    </nav>

    <!-- Social Media Links -->
    <div class="flex space-x-4">
      {
        social_media_links.map((platform) => (
          <a
            href={`https://${platform.toLowerCase()}.com`}
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-gray-300"
          >
            {platform}
          </a>
        ))
      }
    </div>
  </div>
</footer>
